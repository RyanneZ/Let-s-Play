  <div class="col m8 s12 ">
    <img style="width: 100%;" src="https://img.freepik.com/free-vector/kids-learning-play-soccer-with-balls-field-summer-camp-tiny-people-soccer-camp-football-academy-kids-soccer-school-concept-pinkish-coral-bluevector-isolated-illustration_335657-1480.jpg?w=2000" alt="">
  </div>
  
</div>


<script>

  const btn1 = document.getElementById('weather')
  btn1.addEventListener('click', weather)

  async function weather() {
    let weather = await fetch('https://api.openweathermap.org/data/2.5/weather?q=Toronto,ca&units=metric&APPID=e31dbdb16b3b4e124c2f42205ee5d516')
    let obj = await weather.json()
 
    $("#span1").html(obj.weather[0].main)
    $("#weather-icon").attr("src", `http://openweathermap.org/img/wn/${obj.weather[0].icon}@4x.png`);
    $("#span2").html(`${obj.main.temp_max}&deg;C`)
    $("#span3").html(`${obj.main.temp_min}&deg;C`)
    $("#span4").html(`${obj.main.pressure}mb`)
    $("#span5").html(`${obj.main.humidity}%`)
  




    $("#weather-container").show()



  }
</script>
